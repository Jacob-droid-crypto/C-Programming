#include<stdio.h>
int add(int,int);
void mult(int,int);
int main()
{
    int x,y,result;
    printf("Enter the two numbers: ");
    scanf("%d %d",&x,&y);
    result=add(x,y);
    printf("The sum of the two numbers is:%d\n ",result);
    mult(x,y);
    return 0;
}
int add(int a,int b)
{
    int sum=0;
    sum=a+b;
    return sum;
}
void mult(int a,int b)
{
    int product=1;
    product=a*b;
    printf("The product of the numbers is :%d",product);
}
