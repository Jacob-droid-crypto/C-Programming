#include <stdio.h>
int main()
{
    char alphabet;
    printf("Enter the letter: ");
    scanf("%c",&alphabet);
    switch(alphabet)
    {
        case 'a':
        case 'A':
        case 'e':
        case 'E':
        case 'i':
        case 'I':
        case 'o':
        case 'O':
        case 'u':
        case 'U':
            printf("The letter %c is a vowel \n",alphabet);
            break;    
        default:
            printf("The letter %c is a consonant",alphabet);
        
    }
return 0;    
}
